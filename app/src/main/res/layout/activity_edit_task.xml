<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditTaskActivity"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/arrow_back" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_taskinfo_trashbin" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название задачи"
        android:gravity="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_task_description"
        android:inputType="textMultiLine"
        android:minLines="8"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:gravity="top|start"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:padding="10dp"
        android:background="@drawable/textinputborder"
        android:text="Очень классное и длинное описание задачи, нужно обязательно прочитать его,
        прочитайте пожалуйста!"
        tools:text="Очень классное и длинное описание задачи, нужно обязательно прочитать его,
        прочитайте пожалуйста!" />

    <ImageView
        android:id="@+id/iv_task_picture"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/task_picture_placeholder"
        tools:src="@drawable/task_picture_placeholder"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Срок: 11 May 2021 20:51"
            tools:text="Срок: 11 May 2021 20:51"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_taskinfo_calendar"
            tools:src="@drawable/ic_taskinfo_calendar" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_task_members"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:listitem="@layout/task_member_item"
        android:layout_marginHorizontal="10dp">

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal"-->
<!--            android:gravity="center" >-->

<!--            <ImageView-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:src="@drawable/profile_placeholder"-->
<!--                android:layout_gravity="start" />-->

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Иван Иванов" />-->

<!--            <ImageView-->
<!--                android:layout_width="15dp"-->
<!--                android:layout_height="15dp"-->
<!--                android:src="@drawable/ic_one_in_circle"-->
<!--                android:layout_gravity="center" />-->

<!--        </LinearLayout>-->

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">

        <EditText
            style="@style/edittext_round_box"
            android:id="@+id/et_member_name"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/textinputborder"
            android:padding="10dp"
            android:hint="@string/taskinfo_hint_addmembers" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_taskinfo_plus"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <Button
        android:text="Сделано!"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:minWidth="200dp"
        android:textColor="@color/white"
        android:shadowColor="@color/white"
        android:layout_gravity="center" />

</LinearLayout>